dimg do
  docker.from 'ubuntu:16.04'

  git.add('/').to('/app')
  docker.workdir '/app'

  docker.cmd ['/bin/bash', '-lec', 'bundle exec ruby app.rb']
  docker.expose 4567

  chef do
    attributes['dimod-example-ruby']['ruby_version'] = '2.3.1'
    dimod 'dimod-example-ruby', github: 'flant/dimod-example-ruby'

    recipe 'bundle_gems'
    recipe 'app_config'
  end
end
